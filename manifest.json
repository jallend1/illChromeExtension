{
  "manifest_version": 3,
  "name": "Jason's ILL Toolkit",
  "description": "Compilation of ILL tools for Jason",
  "version": "2.4.85",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "clipboardWrite",
    "clipboardRead",
    "contextMenus",
    "sidePanel",
    "webNavigation"
  ],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "copyWorldShareAddress": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Copies address from WorldShare"
    },
    "copyFromOCLC": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      },
      "description": "Copy the request data from WorldShare to clipboard"
    },
    "pasteToEvergreen": {
      "suggested_key": {
        "default": "Ctrl+Shift+2",
        "mac": "Command+Shift+2"
      },
      "description": "Paste the request data from the clipboard to Evergreen"
    },
    "overdueNotice": {
      "suggested_key": {
        "default": "Ctrl+Shift+3",
        "mac": "Command+Shift+3"
      },
      "description": "Generates overdue letter if open patron has any ILLs in overdue status"
    }
  },
  "action": {
    "default_icon": {
      "16": "images/jason-16.png",
      "32": "images/jason-32.png",
      "48": "images/jason-48.png",
      "128": "images/jason-128.png"
    }
  },
  "icons": {
    "16": "images/jason-16.png",
    "32": "images/jason-32.png",
    "48": "images/jason-48.png",
    "128": "images/jason-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/*", "scripts/courierLibraries.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html",
    "open_at_install": true
  },
  "content_scripts": [
    {
      "matches": ["*://*/*hold/*"],
      "js": ["scripts/lendingFeeAlert.js"]
    },
    {
      "matches": ["*://*/*"],
      "js": ["scripts/frequentLending.js"]
    }
  ]
}
